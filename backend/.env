# ---------------------------------------------------------------------------
# Application
# ---------------------------------------------------------------------------
APP_NAME=BrailleConversionTool
APP_ENV=development
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=super-secret-key-change-in-production
ALLOWED_HOSTS=["*"]
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# ---------------------------------------------------------------------------
# Server
# ---------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
WORKERS=2
RELOAD=true

# ---------------------------------------------------------------------------
# Database (MySQL)
# ---------------------------------------------------------------------------
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=braille_db
MYSQL_USER=braille_user
MYSQL_PASSWORD=divdev123
MYSQL_ROOT_PASSWORD=divdev123
DATABASE_URL=mysql+aiomysql://braille_user:divdev123@localhost:3306/braille_db

# ---------------------------------------------------------------------------
# Redis
# ---------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ---------------------------------------------------------------------------
# Celery
# ---------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_CONCURRENCY=4

# ---------------------------------------------------------------------------
# File Storage
# ---------------------------------------------------------------------------
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs
MAX_UPLOAD_SIZE_MB=20
ALLOWED_EXTENSIONS=["jpg","jpeg","png","tiff","tif","bmp","webp","pdf"]

# ---------------------------------------------------------------------------
# ML Models
# ---------------------------------------------------------------------------
MODEL_DIR=app/ml/artifacts
MODEL_ARTIFACTS_DIR=./app/ml/artifacts
DETECTOR_MODEL_PATH=./app/ml/artifacts/detector_best.pt
CLASSIFIER_MODEL_PATH=./app/ml/artifacts/classifier_best.pt
DETECTOR_QUANTIZED_PATH=./app/ml/artifacts/detector_quantized.pt
CLASSIFIER_QUANTIZED_PATH=./app/ml/artifacts/classifier_quantized.pt
DETECTOR_ONNX_PATH=./app/ml/artifacts/detector.onnx
CLASSIFIER_ONNX_PATH=./app/ml/artifacts/classifier.onnx
DOT_DETECTOR_WEIGHTS=./app/ml/artifacts/detector_best.pt
CELL_CLASSIFIER_WEIGHTS=./app/ml/artifacts/classifier_best.pt
IMAGE_SIZE=512
CELL_SIZE=32
CONFIDENCE_THRESHOLD=0.5
DEVICE=cpu
NUM_BRAILLE_CLASSES=64

# ---------------------------------------------------------------------------
# JWT Auth
# ---------------------------------------------------------------------------
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log